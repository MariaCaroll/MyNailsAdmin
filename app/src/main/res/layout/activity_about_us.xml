<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiente_back"
    android:orientation="vertical">
    tools:context=".activitys.AboutUsActivity">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="401dp"
        android:layout_height="222dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="398dp"
        android:layout_height="317dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/pressstart_2p"
        android:padding="10dp"

        android:text="My Nails é um aplicativo que ajudará na
            busca de auxiliar de beleza. Desenvolvido por Maicon Macedo
            e Maria Lima, dois alunos da Fatec Itapetininga, para o Trabalho
            de Graduação."
        android:textAlignment="gravity"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="19dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>