<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiente_back"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txtCreaeAdmin"
        android:layout_width="0dp"
        android:layout_height="99dp"

        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:baselineAligned="true"
        android:fontFamily="@font/pressstart_2p"
        android:text="Create a new Admin"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edtUsuarioAdmin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/edtUsuarioAdmin"
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/drawable_caixa_texto_trans"
        android:baselineAligned="true"
        android:drawableLeft="@drawable/ic_person_personalizado"
        android:fontFamily="@font/pressstart_2p"
        android:hint=" UsuÃ¡rio"
        android:textColor="@android:color/holo_blue_dark"
        android:textColorHint="@android:color/holo_blue_dark"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edtCreatLoginAdmin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCreaeAdmin" />

    <EditText
        android:id="@+id/edtCreatLoginAdmin"
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/drawable_caixa_texto_trans"
        android:baselineAligned="true"
        android:drawableLeft="@drawable/ic_email_personalizado"
        android:fontFamily="@font/pressstart_2p"
        android:hint=" E-mail"
        android:textColor="@android:color/holo_blue_dark"
        android:textColorHint="@android:color/holo_blue_dark"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editTextPasswordCreateAdmin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtUsuarioAdmin" />

    <EditText
        android:id="@+id/editTextPasswordCreateAdmin"
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/drawable_caixa_texto_trans"
        android:baselineAligned="false"
        android:drawableLeft="@drawable/ic_cadeado_personalizado"
        android:ems="10"
        android:fontFamily="@font/pressstart_2p"
        android:hint=" Senha"
        android:inputType="textPassword"
        android:pointerIcon="cell"
        android:textColor="@android:color/holo_blue_dark"
        android:textColorHint="@android:color/holo_blue_dark"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btnCreateAdmin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtCreatLoginAdmin" />

    <Button
        android:id="@+id/btnCreateAdmin"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/drawable_button_login"
        android:baselineAligned="false"
        android:fontFamily="@font/pressstart_2p"
        android:text="Create"
        android:textColor="@android:color/holo_blue_dark"
        android:textColorHint="@android:color/holo_blue_dark"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/progressCreateAdmin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPasswordCreateAdmin" />

    <ProgressBar
        android:id="@+id/progressCreateAdmin"
        style="?android:attr/progressBarStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:baselineAligned="true"
        android:foregroundTint="@color/holo_orange_clarinha"
        android:progressTint="@color/holo_orange_clarinha"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCreateAdmin" />

</androidx.constraintlayout.widget.ConstraintLayout>

