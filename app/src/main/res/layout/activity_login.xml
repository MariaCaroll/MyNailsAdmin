<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/holo_orange_clarinha"
    android:backgroundTint="@color/darknnesrigh"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtWelcome"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="Welcome To My Nays Admin"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edtLoginAdmin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/edtLoginAdmin"
        android:layout_width="340dp"
        android:layout_height="49dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/drawable_caixa_texto"
        android:fontFamily="serif-monospace"
        android:hint="E-mail"
        android:textColor="@android:color/holo_orange_light"
        android:textColorHint="@color/holo_orange_clarinha"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editTextPasswordAdmin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtWelcome" />

    <EditText
        android:id="@+id/editTextPasswordAdmin"
        android:layout_width="338dp"
        android:layout_height="56dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/drawable_caixa_texto"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        android:pointerIcon="cell"
        android:textColor="@android:color/holo_orange_light"
        android:textColorHint="@color/holo_orange_clarinha"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAutenticarDadosAdmin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtLoginAdmin" />


    <Button
        android:id="@+id/btnAutenticarDadosAdmin"
        android:layout_width="221dp"
        android:layout_height="58dp"
        android:fontFamily="serif-monospace"
        android:text="Submit"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="30dp"
        android:background="@drawable/drawable_button_login"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="389dp" />

    <TextView
        android:id="@+id/txtCreateNewAdmin"
        android:layout_width="194dp"
        android:layout_height="54dp"
        android:background="@android:color/transparent"
        android:fontFamily="serif-monospace"

        android:text="Create Account"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="201dp"
        tools:layout_editor_absoluteY="474dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundTint="@color/holo_orange_clarinha"
        android:progressTint="@color/holo_orange_clarinha"
        tools:layout_editor_absoluteX="181dp"
        tools:layout_editor_absoluteY="573dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

